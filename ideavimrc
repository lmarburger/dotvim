set clipboard=unnamed  " link vim and the system's clipboards
set ignorecase         " ignore case when searching.
set visualbell         " silence bell http://jason-stillwell.com/blog/2013/04/11/ideavim/
set surround           " Emulates vim-surround

let mapleader = ","

nmap <C-h> <C-w>h
nmap <C-j> <C-w>j
nmap <C-k> <C-w>k
nmap <C-l> <C-w>l

nmap <leader><leader> ,<ESC>
nmap <leader>s :action SaveAll<enter>

nmap <leader>. :action Rerun<enter>
nmap <leader>> :action RunClass<enter>

nmap <leader>f :action MoveTabRight<enter>
nmap <leader>S :action MoveTabDown<enter>
nmap <leader>x :action Unsplit<enter>

nmap <leader>r :action Refactorings.QuickListPopupAction<enter>
nmap <leader>u :action ShowUsages<enter>

nmap <leader>h :action QuickJavaDoc<enter>

map <leader>g :action Github.Open.In.Browser<enter>
map <leader>v :action IntroduceVariable<enter>
